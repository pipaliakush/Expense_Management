{
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "standard",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "arrow-spacing": "error",
    "consistent-return": "warn",
    "dot-notation": "warn",
    "eqeqeq": "error",
    "eol-last": "warn",
    "func-call-spacing": "error",
    "no-multi-spaces": "warn",
    "no-return-await": "warn",
    "no-var": "error",
    "prefer-const": "error",
    "prefer-template": "error",
    "space-before-blocks": "error",
    "spaced-comment": [
      "error",
      "always"
    ],
    "yoda": "error"
  }
}